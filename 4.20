#include<iostream>
using namespace std;
int main(){
	int pass=0;
	int fail=0;
	int std_counter;            //student counter to count number of students
	int result=0;
	while(std_counter<=10){
	cout<<"enter  result (1 =pass, 2=fail)";
	cin>>result;
	if(result==1){
		pass=pass+1;
	}
	else if(result==2){
		fail=fail+1;
	}
	else
	cout<<"invalid entry\n";
	std_counter++;
}
cout<<"passed"<<pass<<"\n";
cout<<"failures"<<fail<<"\n";
if(pass>8){
	cout<<"bonus to the instructor";
}
return 0;
}
