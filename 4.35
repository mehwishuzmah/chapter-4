#include<iostream>
using namespace std;
int main(){
	int n,f,c;
	c=1;
	f=1;
	
	cout<<"enter number for factorial";
	cin>>n;
	while(c<=n){
	   f=f*c;
		c++;
	}
	cout<<"the factorial of "<<n<<" is "<<f;
	return 0;
}




