#include<iostream>
using namespace std;
int main(){
	double r;
	double area,circum,vol;
	cout<<"enter radius of sphere";
	cin>>r;
	vol=(4*3.14159*r*r*r)/3;    
	area=4*3.14159*r*r;         
	circum=2*3.14159*r;         
	cout<<"volume of a sphere is "<<vol<<"\n";
	cout<<"area of a sphere is "<<area<<"\n";
	cout<<"circumference of a sphere is "<<circum;
	return 0;                            
}
